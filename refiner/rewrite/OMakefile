CAMLP4INCLUDES = -I../refsig

OCAMLINCLUDES =\
	$(OCAMLINCLUDES)\
	-I $(ROOT)/libmojave/stdlib\
	-I $(ROOT)/libmojave/util\
	-I ../../mllib\
	-I ../refbase\
	-I ../refsig\
	-I ../term_std\
	-I ../term_gen\
	-I ../term_ds

#
# Rewriter library
#
OCamlLibraryInstall($(MPINSTALL), $(LIB), rewrite, $(REWRITE_FILES))

#XXX HACK! This is a workaround for a bug in omake 0.7.7
if $(BYTE_ENABLED)
   rewrite_types.cmi: rewrite_types.cmo
else
   rewrite_types.cmi: rewrite_types.cmx

#
# Clean up
#
clean:
    $(CLEAN)

all: rewrite$(LIB_SUFFIX)
