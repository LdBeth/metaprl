Import qw( env );

$env = $env->clone(
	INCPATH	=> [@{$env->{INCPATH}}, "/usr/lib/camlp4", "../base"],
	OCAMLCFLAGS => "$env->{OCAMLCFLAGS} -pp '%CAMLP4MACRO'",
    	PPFLAGS     => "q_MLast.cmo pa_extend.cmo $env->{PPFLAGS}"
);

OCamlSources $env
	'tactic_boot_sig.mlz',
	'tactic_boot.ml',
	'sequent_boot.ml',
	'tacticals_boot.ml',
	'rewrite_boot.ml',
	'conversionals_boot.ml',
	'proof_term_boot.ml',
	'proof_boot.ml',
	'exn_boot.ml',
	'tactic_type.ml',
	'proof_convert.ml';

OCamlLibrary $env 'boot',
	'tactic_boot_sig',
	'tactic_boot',
	'sequent_boot',
	'tacticals_boot',
	'rewrite_boot',
	'conversionals_boot',
	'proof_term_boot',
	'proof_boot',
	'exn_boot',
	'tactic_type',
	'proof_convert';

## Add the library to the default target list
Default qw( boot.cmxa );
