#
# Configure Ensemble
#
setenv ENS_PORT 7474
setenv ENS_MODES "DEERING:UDP"
setenv ENS_DEERING_PORT 7472
setenv ENS_GOSSIP_PORT 7470
setenv ENS_GOSSIP_HOSTS tulare
setenv ENS_ID $USER
setenv ENS_DOMAIN_PORT 7473

#
# TPTP libraries
#
setenv TPTP ../../../TPTP
if(-d $TPTP) then
   setenv MP_TPTP `echo . $TPTP $TPTP/Problems/* | sed -e 's, ,:,g'`
endif

#
# Use the local copy of the library
#
setenv MPLIB ../../lib

#
# Nogin - I often work with LANG=ru_RU.KOI8_R which causes some cyrillic letters to appear
# in funny places like the .prla files (since is_printable function used by String.escape is
# locale-aware). To avoid these problems, we'd better work with LC_ALL=C
#
setenv LC_ALL=C

#
# Camlp4 directory
#
if ( ! $?CAMLP4LIB ) then
   setenv CAMLP4LIB /usr/lib/camlp4
endif

setenv INCLUDES "-I . -I ../../theories/sil -I ../../theories/reflect_itt -I ../../theories/tutorial -I ../../theories/tptp -I ../../theories/fol -I ../../theories/czf -I ../../theories/itt -I ../../theories/base -I ../../theories/ocaml -I ../../theories/ocaml_sos -I ../../theories/tactic -I ../../theories/mc -I ../../theories/fir -I ../../theories/phobos -I tests -I $CAMLP4LIB"
