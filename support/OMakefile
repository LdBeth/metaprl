#
# Include files from subdirectories
#
include display/Files
include shell/Files
include tactics/Files
include doc/Files

DISPLAY_FILES  = $(file $(addprefix display/,  $(DISPLAY_FILES)))
SHELL_FILES    = $(file $(addprefix shell/,    $(SHELL_FILES)))
TACTICS_FILES  = $(file $(addprefix tactics/,  $(TACTICS_FILES)))
DOC_FILES      = $(file $(addprefix doc/,      $(DOC_FILES)))

FILES[] =
    $(DISPLAY_FILES)
    $(SHELL_FILES)
    $(TACTICS_FILES)
    $(DOC_FILES)

OCamlLibraryInstall($(MPINSTALL), $(LIB), support, $(FILES))

#
# Install .cmiz files
#
InstallCmizFiles(files) =
    LibInstall($(addsuffix .cmiz, $(files)))

#
# Subdirectories
#
.SUBDIRS: display shell tactics doc editor

#
# Clean up
#
clean:
    $(CLEAN)
