#
# Don't need any libraries.
#
OCAMLINCLUDES[] +=
    ../display
    ../shell

# Common files
MLZFILES[] =
    top_resource

# Library files
MPFILES[] =
    tactic_cache
    base_cache
    var
    top_resource
    top_options
    top_tacticals
    top_conversionals
    simp_typeinf
    typeinf
    auto_tactic
    dtactic
    forward

# Files using the normal OCaml compiler
MLFILES[] =
    basic_tactics

section
    value $(STANDARD_BUILD_ENV)
    files = $(addsuffixes .cmi .cmo .cmx $(EXT_OBJ), $(MLFILES))
    $(files):

$(THEORIES_PATH): $(CWD)

OCamlLibrary(theory, $(MPFILES) basic_tactics)

#
# Clean up
#
clean:
    $(CLEAN)

all: theory$(LIB_SUFFIX)
