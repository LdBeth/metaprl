#
# Files to install
#
include Files

#
# Build the SSL files
#
if $(SSL_ENABLED)
    INPUTS += metaprl-ssl.config
    export

#
# Copy the files in inputs
#
LIBINPUTS = $(file $(addprefix $(LIB)/, $(INPUTS)))

$(LIBINPUTS): $(LIB)$(SLASH)%: %
        $(symlink $<, $@)

$(MPINSTALL): $(LIBINPUTS)

.DEFAULT: $(LIBINPUTS)

clean:
   $(CLEAN) *.pem
