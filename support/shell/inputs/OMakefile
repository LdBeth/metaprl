#
# Files to install
#
include Files

#
# Build the SSL files
#
if $(SSL_ENABLED)
    if $(equal $(OSTYPE), Win32)
        UMASK =
        SILENT =
        export
    else
        UMASK = umask 077 &&
        SILENT = > /dev/null 2>&1
        export

    server.pem: metaprl-ssl.config
        $(UMASK) openssl req -x509 -newkey rsa:1024 -keyout $@ -out $@ -days 360 -config $< $(SILENT)

    client.pem: metaprl-ssl.config
        $(UMASK) openssl req -x509 -newkey rsa:1024 -keyout $@ -out $@ -days 360 -config $< $(SILENT)

    dh.pem:
        $(UMASK) openssl dhparam -2 -out $@ $(SILENT)

    INPUTS += server.pem client.pem dh.pem

    export

#
# Copy the files in inputs
#
LIBINPUTS = $(file $(addprefix $(LIB)/, $(INPUTS)))

$(LIBINPUTS): $(LIB)$(SLASH)%: %
        $(symlink $<, $@)

$(MPINSTALL): $(LIBINPUTS)

clean:
   $(CLEAN) *.pem
