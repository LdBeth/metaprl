    export

#
# Copy the files in inputs
#
LIBINPUTS = $(file $(addprefix $(LIB)/, $(INPUTS)))

$(LIBINPUTS): $(LIB)/%: %
        $(symlink $<, $@)

$(MPINSTALL): $(LIBINPUTS)

.DEFAULT: $(LIBINPUTS)

clean:
   $(CLEAN) *.pem
