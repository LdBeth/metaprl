$(THEORIES_PATH):
    section eval
        deps = $(dependencies $@)
        deps = $(mapprefix -I, $(in editor/ml, $(deps)))
        if $(equal $(OSTYPE), Win32)
            fprintln($@, $(string $(deps)))
        else
            fprintln($@, INCLUDES=$(quote-argv $(deps)))

$(MLDEBUG_PATH):
    section eval
        deps = $(project-directories) $(CAMLLIB) $(CAMLP4LIB)
        deps = $(mapprefix -I, $(in editor/ml, $(deps)))
        if $(equal $(OSTYPE), Win32)
            fprintln($@, $(string $(deps)))
        else
            fprintln($@, DEBUGINCLUDES=$(quote-argv $(deps)))

